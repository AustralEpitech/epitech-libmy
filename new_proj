#!/bin/bash -e
shopt -s dotglob extglob failglob

function ask_yn() {
    local ans

    echo -en "$1" >&2
    read -r ans
    case "${ans,,}" in
        y|yes)
            return 0
            ;;
        *)
            return 1
            ;;
    esac
}

if [ -t 1 ]; then
    BOLD='\e[1m'
    NORMAL='\e[0m'
fi

SRC="$(dirname "$0")/repo"
NAME="$1"

while [ -z "$NAME" ]; do
    echo -n 'Name: ' >&2
    read -r NAME
done

FILES="$(echo "$NAME"/!(.|..|git))"
if [ -n "$FILES" ]; then
    if ask_yn "$NAME exists. Replace? [Y/n] "; then
        echo -e "${BOLD}REMOVE${NORMAL}"
        rm -rf "$FILES"
    else
        exit
    fi
fi

echo -e "${BOLD}COPY${NORMAL}"
mkdir -p "$NAME"
cp -rf "$SRC"/* "$NAME"

YEAR="$(date '+%Y')"
echo -e "${BOLD}REPLACING PROJECT NAME${NORMAL}"
find "$NAME" -type f ! -path "$NAME/.git/*" -exec sed -i " \
        s/{{PROJ}}/$NAME/g;                                \
        s/{{PROJ_UP}}/${NAME^^}/g;                         \
        s/{{YEAR}}/$YEAR/g                                 \
    " '{}' +

echo -e "${BOLD}DONE${NORMAL}"
